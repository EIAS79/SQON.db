    "compilerOptions": {
      "target": "ES2022",
      "moduleResolution": "node",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "strict": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": ["./lib/"],
    "exclude": ["node_modules"]
  }
  